
.page-header
%table.table.table-striped
	%thead
		%tr
			%th= 'id'
			%th= 'naslov'
			%th= 'opis'
			%th= 'created_at'
			%th= 'actions'
	%tbody
	- ankete.each do |anketa|
		%tr
			%td
				= link_to anketa.id, anketa_path(anketa)
			%td
				=anketa.naslov
			%td
				=anketa.opis
			%td
				=anketa.created_at								
			%td
				= link_to 'edit', edit_anketa_path(anketa), :class => 'btn btn-primary btn-xs' 
				= link_to 'destroy', anketa_path(anketa), :method => :delete,
				:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
				:class => 'btn btn-danger btn-xs'

= link_to 'new', new_anketa_path, :class => 'btn btn-primary btn-xs'