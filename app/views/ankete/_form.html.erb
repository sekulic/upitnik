<%= simple_form_for @anketa, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :naslov %>
  <%= f.input :opis %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                ankete_path, :class => 'btn' %>
  </div>
<% end %>
